<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
</head>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/kojs")
<body>
    <div class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow nav-primary">
        @Html.ActionLink("Pseudonymizer", "Index", "Home", new { area = "" }, new { @class = "sidebar-brand d-flex align-items-center justify-content-center sidebar-brand-text mx-3" })
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019-@DateTime.Now.Year - Bohdan Bryzhatyi, Artelogic</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

<style>
    .nav-primary {
        margin-bottom: 0 !important;
    }
</style>